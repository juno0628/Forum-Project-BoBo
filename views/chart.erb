	<div>
		<h1>Number of Topics/Comments by User</h1>
		<span style="background-color: rgba(157,64,40,1);">comment</span>
		<span style="background-color: rgba(64,157,40,1);">topics</span>
	<div>
		<div style="width: 80%;", align ="center">
			<canvas id="canvas" height="400px;" width="300px;"></canvas>
		</div>

	<a href="/topics">Go Back to Homepage</a>

	<script>

	var newData = {

		labels : <%=@label%>,

		datasets : [
			{
				fillColor : "rgba(157,64,40,1)",
				strokeColor : "rgba(220,220,220,0.8)",
				highlightFill: "rgba(220,220,220,0.75)",
				highlightStroke: "rgba(220,220,220,1)",
				data : <%=@topic%>
			},
			{
				fillColor : "rgba(64,157,40,1)",
				strokeColor : "rgba(151,187,205,0.8)",
				highlightFill : "rgba(151,187,205,0.75)",
				highlightStroke : "rgba(151,187,205,1)",
				data : <%=@comment %>
			}
		]
	}
	window.onload = function(){
		var ctx = document.getElementById("canvas").getContext("2d");
		window.myBar = new Chart(ctx).Bar(newData, {
			responsive : false
		});
	}
	</script>
